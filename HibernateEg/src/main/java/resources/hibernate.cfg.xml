<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration SYSTEM "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
	<session-factory>

		<property name="hibernate.dialect"> org.hibernate.dialect.MySQLDialect </property>
		<property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>

		<!-- CREATE DATABASE db_name; -->
		<!--To connect database: Assume dharanidb is the database -->

		<property name="hibernate.connection.url">jdbc:mysql://localhost/product</property>
		<property name="hibernate.connection.username">root</property>
		<property name="hibernate.connection.password">madhu</property>

		<!-- setting privileges -->
		<property name="hibernate.hbm2ddl.auto">update</property>

		<!-- Tracking query which are generated by Hibernate -->
		<property name="show_sql">true</property>
		<property name="format_sql">true</property>

		<!-- List of XML mapping files -->
		<mapping resource="resources/Employee.hbm.xml" />
        <mapping resource="resources/EmployeeAnnotationEntity.hbm.xml" />

	</session-factory>


</hibernate-configuration>
